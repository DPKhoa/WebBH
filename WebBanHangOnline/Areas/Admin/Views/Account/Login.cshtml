@model WebBanHangOnline.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";


}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form", id = "form-1" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true);

    <h3 class="heading">Thành viên đăng nhập</h3>
    <div class="spacer"></div>

    <div class="form-group">
        <label for="fullname" class="form-label">Tài khoản</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Tài khoản" })
        <span class="form-message"></span>
    </div>

    <div class="form-group">
        <label for="password" class="form-label">Mật khẩu</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
        <span class="form-message"></span>
    </div>

   
    <button type="submit" class="form-submit">Đăng nhập</button>

}



